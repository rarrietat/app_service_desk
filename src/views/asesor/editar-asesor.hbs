<form action="/asesor/edit/{{asesor._id}}?_method=PUT" method="POST" autocomplete="off">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card border-light shadow-sm components-section">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4 col-sm-6 mb-4">
                            <label for="nombre">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="{{asesor.nombre}}">
                        </div>

                        <div class="col-lg-4 col-sm-6 mb-4">
                            <label for="apellido">Apellido</label>
                            <input type="text" class="form-control" id="apellido" name="apellido" value="{{asesor.apellido}}">
                        </div>

                        <div class="col-lg-4 col-sm-6 mb-4">
                            <label for="alias">Alias</label>
                            <input type="text" class="form-control" id="alias" name="alias" value="{{asesor.alias}}">
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary float-right">Actualizar</button>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</form>