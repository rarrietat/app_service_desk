<!DOCTYPE html>
<html lang="es">

<head> 

{{> _head }}

</head>

<body class="bg-soft">

    {{> _errors }}

    <main>

        <section class="vh-100 d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center form-bg-image">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="signin-inner my-3 my-lg-0 bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-450">
                            <div class="text-center text-md-center mb-4 mt-md-0">
                                <img src="../images/logo_grupo_fractalia.png" alt="">
                                {{!-- <h1 class="mb-0 h3">Inicia sesión</h1> --}}
                            </div>
                            <form action="/login" class="mt-4" method="POST" autocomplete="off">
                                <!-- Form -->
                                <div class="form-group mb-4">
                                    {{!-- <label for="username">Nombre de usuario</label> --}}
                                    <div class="input-group">
                                        <span class="input-group-text" id="basic-addon1"><span class="fas fa-envelope"></span></span>
                                        <input type="text" class="form-control" placeholder="nombre de usuario" id="username" name="username" autofocus required>
                                    </div>  
                                </div>
                                <!-- End of Form -->
                                <div class="form-group">
                                    <!-- Form -->
                                    <div class="form-group mb-4">
                                        {{!-- <label for="password">Contraseña</label> --}}
                                        <div class="input-group">
                                            <span class="input-group-text" id="basic-addon2"><span class="fas fa-unlock-alt"></span></span>
                                            <input type="password" placeholder="contraseña" class="form-control" id="password" name="password" required>
                                        </div>  
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-block btn-primary">Iniciar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    {{> _scripts }}

</body>

</html>
