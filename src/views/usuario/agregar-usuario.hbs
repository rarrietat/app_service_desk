<form action="/usuario/add" method="POST" autocomplete="off">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card border-light shadow-sm components-section">
                <div class="card-body">
                    <h2 class="h5 mb-4">Informaci√≥n General</h2>
                    <div class="row mb-4">
                        <div class="col-lg-3 col-sm-6">

                            <div class="mb-4">
                                <label for="nombre">Nombre</label>
                                <input type="text" class="form-control" id="nombre" name="nombre" value="{{nombre}}">
                            </div>

                            <div class="mb-4">
                                <label for="apellido">Apellido</label>
                                <input type="text" class="form-control" id="apellido" name="apellido" value="{{apellido}}">
                            </div>

                        </div>

                        <div class="col-lg-3 col-sm-6">

                            <div class="mb-4">
                                <label for="username">Username</label>
                                <input type="text" class="form-control" id="username" name="username" value="{{username}}">
                            </div>

                            <div class="mb-4">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password" value="{{password}}">
                            </div>

                        </div>

                        <div class="col-lg-3 col-sm-6">

                            <div class="mb-4">
                                <label for="correo">Correo</label>
                                <input type="text" class="form-control" id="correo" name="correo" value="{{correo}}">
                            </div>

                            <div class="mb-4">
                                <label for="celular">Celular</label>
                                <input type="mail" class="form-control" id="celular" name="celular" value="{{celular}}">
                            </div>

                        </div>

                        <div class="col-lg-3 col-sm-6">

                            <div class="mb-4">
                                <input type="hidden" id="idRol" value="{{rol}}">
                                <label for="rol">Rol</label>
                                <select id="rol" name="rol" class="form-select">
                                </select>
                            </div>

                            <div class="mb-4">
                                <input type="hidden" id="idEquipo" value="{{equipo}}">
                                <label for="equipo">Equipo</label>
                                <select id="equipo" name="equipo" class="form-select">
                                </select>
                            </div>

                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary float-right">Guardar</button>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</form>

<script src="/js/usuario.js"></script>